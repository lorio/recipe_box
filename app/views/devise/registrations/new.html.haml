.col-md-4
  .panel.panel-default
    .panel-heading
      %h2 Sign up
    .panel-body
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification
        .form-group
          = f.label :username
          = f.text_field :username, required: true, autofocus: true, class: "form-control"
        .form-group
          = f.label :email
          = f.email_field :email, required: true, autofocus: true, class: "form-control"
        .form-group
          = f.label :password
          = f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
        .form-group
          = f.submit "Sign up", class: "btn btn-primary"
    .panel-footer
      = render "devise/shared/links"
